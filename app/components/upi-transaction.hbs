
{{#if @value}}
<button type="button" class="account-action" {{on "click" this.transactionHistory}}>Transaction history</button>
{{/if}}
{{#if this.show}}
<div class="pop-overlay">
  <div class="popup">
    <span class="close-button" {{on "click" this.close}}>close</span>
<h4>Upi Transactions List</h4>

<table>
  <thead>
    <tr>
      <th>Transaction ID</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Amount</th>
      <th>Transaction Type</th>
      <th>Transaction Status</th>
      <th>Remarks</th>
      <th>Reference ID</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.history as |transaction|}}
      <tr>
        <td>{{transaction.transaction_id}}</td>
        <td>{{transaction.sender}}</td>
        <td>{{transaction.receiver}}</td>
        <td>{{transaction.amount}}</td>
        <td>{{transaction.transaction_type}}</td>
        <td>{{transaction.transaction_status}}</td>
        <td>{{transaction.remarks}}</td>
        <td>{{transaction.reference_id}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>
{{/if}}  



